<IfModule mod_rewrite.c>

    Options +FollowSymLinks
    RewriteEngine on
	RewriteBase /
   
    # Send request via index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond $1 !^(index\.php|images|robots\.txt)
    RewriteRule ^(.*)$ index.php?/$1 [L]
    

</IfModule>